class AntiState extends FlxState
{

	public function new() 
     {
         super();
     }

	override public function create():Void 
	{
		var bg:FlxSprite = new FlxSprite();
		
		bg.loadGraphic(Paths.image("evilScreen"));
		bg.antialiasing = true;
		add(bg);
        FlxG.sound.playMusic(Paths.music("evilbloop","preload"),1,false);

		var gayShit:FlxText;

		gayShit = new FlxText(0,0,FlxG.width,"An irregularity has been detected. Please turn the power off, wait for 10 seconds, and then turn the power on again.", 20);
		gayShit.setFormat(Paths.font("funkin.otf"), 25, FlxColor.WHITE, FlxTextAlign.CENTER);
		add(gayShit);
	}
	override public function update(elapsed:Float):Void 
	{
		super.update(elapsed); 
			
		if(FlxG.keys.pressed.ENTER)
		{
			#if windows
			FlxG.sound.music.pause();
			Sys.sleep(2);
			FlxG.sound.music.play();
			var faggotMaterial:FlxText;

			faggotMaterial = new FlxText(0,0,FlxG.width,"", 20);
			faggotMaterial.setFormat(Paths.font("funkin.otf"), 25, FlxColor.WHITE, FlxTextAlign.CENTER);
			add(faggotMaterial);
			new FlxTimer().start(0.1, function(tmr:FlxTimer)
			{
				Sys.exit(0);
			});
			#end
		}
	}
}